<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <style>
        table { width: 100%; border-collapse: collapse; margin-top: 20px; }
        th, td { padding: 10px; border: 1px solid #ddd; text-align: left; }
        th { background-color: #f2f2f2; }
        .btn-danger { background-color: #dc3545; color: white; border: none; padding: 5px 10px; cursor: pointer; border-radius: 3px; }
        .btn-danger:hover { background-color: #c82333; }
        .btn-primary { background-color: #007bff; color: white; border: none; padding: 5px 10px; cursor: pointer; border-radius: 3px; text-decoration: none; display: inline-block; }
        .btn-primary:hover { background-color: #0056b3; }
    </style>
<%- include('header.ejs') %>
</head>
<body>
    <div class="page">
<%- include('body.ejs') %>
        <div class="body">
            <div class="container">
                <h1><%= title %></h1>
                <div class="table-wrapper">
                    <table class="styled-table">
                        <tr>
                            <td style="width: 10%; text-wrap-mode: nowrap;">Name</td>
                            <td><strong><%= fuzzer.name %></strong></td>
                        </tr>
                        <tr>
                            <td style="width: 10%; text-wrap-mode: nowrap;">Programm</td>
                            <td><%= fuzzer.path %></td>
                        </tr>
                        <tr>
                            <td style="text-wrap-mode: nowrap;">Log File</td>
                            <td><%= fuzzer.logPath || 'Not started yet' %></td>
                        </tr>
                        <tr>
                            <td style="text-wrap-mode: nowrap;">Crash directory</td>
                            <td><%= fuzzer.crashDir || '-' %></td>
                        </tr>
                        <tr>
                            <td style="text-wrap-mode: nowrap;">Corpus directory</td>
                            <td><%= fuzzer.corpusDir || '-' %></td>
                        </tr>
                        <tr>
                            <td style="text-wrap-mode: nowrap;">Input keywords</td>
                            <td><%= fuzzer.dict || '-' %></td>
                        </tr>
                        <tr>
                            <td style="text-wrap-mode: nowrap;">Start ARGS</td>
                            <td><%= fuzzer.args || '-' %></td>
                        </tr>
                        <tr>
                            <td style="text-wrap-mode: nowrap;">Start Time</td>
                            <td><%= fuzzer.startTime || 'Not started yet' %></td>
                        </tr>
                    </table>
                </div>

                <div class="table-wrapper" style="margin: 1em 0;">
                    <table class="styled-table">
                        <thead>
                            <tr>
                                <th style="width: 75%; text-wrap-mode: nowrap;">Filename</th>
                                <th style="width: 5%;">Size</th>
                                <th style="width: 5%;">Date</th>
                                <th style="width: 15%;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% crashes.forEach(crash => { %>
                                <tr>
                                    <td><%= crash.name %></td>
                                    <td style="text-wrap-mode: nowrap;"><%= crash.size %></td>
                                    <td style="text-wrap-mode: nowrap;"><%= crash.date %></td>
                                    <td style="text-wrap-mode: nowrap;">
                                        <a href="/fuzzers/crashes/<%= fuzzer.id %>/download/<%= crash.name %>" class="btn-primary">Download</a>
                                        <form action="/fuzzers/crashes/<%= fuzzer.id %>/delete/<%= crash.name %>" method="POST" style="display:inline; margin-left: 5px;">
                                            <button type="submit" class="btn-danger" onclick="return confirm('Are you sure you want to delete this crash file?')">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                            <% if (crashes.length === 0) { %>
                                <tr>
                                    <td colspan="4" style="text-align: center;">No crash files found.</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>

                <a href="/fuzzers">Back to Fuzzers List</a>
            </div>
        </div>
    </div>
</body>
</html>
