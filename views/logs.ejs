<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="/socket.io/socket.io.js"></script>
    <style>
        #logs { 
            width: 100%; 
            height: 500px; 
            background-color: #1e1e1e; 
            color: #d4d4d4; 
            text-align: left; 
            padding: 10px; 
            margin: 1em 0;
            overflow-y: scroll; 
            font-family: 'Courier New', Courier, monospace; 
            white-space: pre-wrap;
            border-radius: 5px;
            box-sizing: border-box;
        }
    </style>
<%- include('header.ejs') %>
</head>
<body>
    <div class="page">
<%- include('body.ejs') %>
        <div class="body">
            <div class="container">
                <h1><%= title %></h1>
                <div class="table-wrapper">
                    <table class="styled-table">
                        <tr>
                            <td style="width: 10%; text-wrap-mode: nowrap;">Name</td>
                            <td><strong><%= fuzzer.name %></strong></td>
                        </tr>
                        <tr>
                            <td style="width: 10%; text-wrap-mode: nowrap;">Programm</td>
                            <td><%= fuzzer.path %></td>
                        </tr>
                        <tr>
                            <td style="text-wrap-mode: nowrap;">Log File</td>
                            <td><%= fuzzer.logPath || 'Not started yet' %></td>
                        </tr>
                        <tr>
                            <td style="text-wrap-mode: nowrap;">Crash directory</td>
                            <td><%= fuzzer.crashDir || '-' %></td>
                        </tr>
                        <tr>
                            <td style="text-wrap-mode: nowrap;">Corpus directory</td>
                            <td><%= fuzzer.corpusDir || '-' %></td>
                        </tr>
                        <tr>
                            <td style="text-wrap-mode: nowrap;">Input keywords</td>
                            <td><%= fuzzer.dict || '-' %></td>
                        </tr>
                        <tr>
                            <td style="text-wrap-mode: nowrap;">Start ARGS</td>
                            <td><%= fuzzer.args || '-' %></td>
                        </tr>
                        <tr>
                            <td style="text-wrap-mode: nowrap;">Start Time</td>
                            <td><%= fuzzer.startTime || 'Not started yet' %></td>
                        </tr>
                    </table>
                </div>
                <div id="logs"></div>

                <a href="/fuzzers">Back to Fuzzers List</a>
            </div>
        </div>
    </div>

    <script>
        const socket = io();
        const logsDiv = document.getElementById('logs');
        const fuzzerId = '<%= fuzzer.id %>';

        socket.emit('join_log', fuzzerId);

        socket.on('log_data', (data) => {
            logsDiv.textContent += data;
            logsDiv.scrollTop = logsDiv.scrollHeight; // Auto-scroll to bottom
        });
    </script>
<%- include('footer.ejs') %>
</body>
</html>
